generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  reminders Reminder[] @relation("UserReminders")
  otp       String?
  createdAt DateTime   @default(now())
}

model Reminder {
  id          String   @id @default(uuid())
  title       String
  description String?
  time        DateTime // Full datetime, not just HH:mm format
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  status      Status   @default(PENDING)

  userId String
  user   User   @relation("UserReminders", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId]) // Add index for better query performance
}

enum Status {
  SENT
  PENDING
  FAILED
}
